								templ.KV("dark:bg-fuchsia-900 dark:text-fuchsia-100 bg-fuchsia-100 text-fuchsia-800", alert.Category != "Information" && alert.Category != "Caution" && alert.Category != "Danger" && alert.Category != "Park Closure") }
